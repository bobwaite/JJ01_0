<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoresText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/betsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton200"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="buttonOnClick"
            android:text="200"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="buttonOnClick"
            android:text="400"
            android:textSize="20sp"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/radioButton600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="buttonOnClick"
            android:text="600"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="buttonOnClick"
            android:text="800"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="buttonOnClick"
            android:text="1000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonP2Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundedgreen"
        android:onClick="buttonOnClick"
        android:text="PLAYER 2 RIGHT"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonP1Right" />
    <!--android:background="@android:color/holo_red_dark"-->


    <Button
        android:id="@+id/buttonP1Wrong"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/roundedred"
        android:onClick="buttonOnClick"
        android:text="PLAYER 1 WRONG"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betsRadioGroup" />

    <Button
        android:id="@+id/buttonP1Right"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/roundedgreen"
        android:onClick="buttonOnClick"
        android:text="PLAYER 1 RIGHT"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betsRadioGroup" />

    <Button
        android:id="@+id/buttonP2Wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundedred"
        android:onClick="buttonOnClick"
        android:text="PLAYER 2 WRONG"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonP1Wrong" />

    <Button
        android:id="@+id/buttonFinal"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/roundedred"
        android:onClick="buttonOnClick"
        android:text="FINAL"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/P1ScoreText"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:layout_marginEnd="184dp"
        android:layout_marginLeft="178dp"
        android:layout_marginRight="184dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="76dp"
        android:hint="0"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/buttonP1Wrong"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toEndOf="@+id/buttonP1Right"
        app:layout_constraintTop_toBottomOf="@+id/betsRadioGroup" />

    <TextView
        android:id="@+id/P2ScoreText"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:layout_marginEnd="184dp"
        android:layout_marginLeft="178dp"
        android:layout_marginRight="184dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="32dp"
        android:hint="0"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/buttonP2Wrong"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/buttonP2Right"
        app:layout_constraintTop_toBottomOf="@+id/P1ScoreText" />

    <Button
        android:id="@+id/buttonDaily"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@drawable/roundedred"
        android:onClick="buttonOnClick"
        android:text=" DAILY DOUBLE "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/buttonDouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedred"
        android:onClick="buttonOnClick"
        android:text="DOUBLE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toEndOf="@+id/buttonDaily" />

    <TextView
        android:id="@+id/textViewDouble"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:text="DOUBLE BETS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betsRadioGroup"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/bet1View"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="123dp"
        android:layout_marginStart="71dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonP1Right"
        app:layout_constraintEnd_toStartOf="@+id/textViewDouble"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bet2View"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="103dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonP1Wrong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toEndOf="@+id/textViewDouble" />


</android.support.constraint.ConstraintLayout>